<Window x:Class="Library.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows"
        mc:Ignorable="d"
        Title="Авторизация" MinHeight="550" Height="550" Width="600" MinWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="159*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="260*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="149*"/>
        </Grid.RowDefinitions>
        <Image Source="\Icon\logo_vis222.png" Grid.Column="1"/>
        <TextBlock Grid.Column="1" Grid.ColumnSpan="2"  Grid.Row="1" Text="Login" FontSize="16"  Height="AUTO"/>
        <TextBox  Grid.Column="1"  Grid.ColumnSpan="2"  Grid.Row="2" x:Name="tbLogin" Background= "#D6E6F3F3" BorderBrush="#FFEAF5F5" Height="AUTO"  Text="von.shanie@yahoo.com "/>
        <TextBlock Grid.Column="1"  Grid.ColumnSpan="2"  Grid.Row="3" Text="Password" FontSize="16"  Height="AUTO"/>
        <Image MouseLeftButtonUp="Image_MouseLeftButtonUp" Grid.Column="2"  Grid.Row="4" MouseLeftButtonDown="Image_MouseLeftButtonDown" Margin="2" Width="auto"  Source="/icon/207-2073226_show-icon-png-white-password-view-icon.png" OpacityMask="#FFEAF5F5"></Image>
        <PasswordBox Grid.Column="1"   Grid.Row="4" x:Name="pbPassword" Password="z1BQF7t2o6"  Background= "#FFEAF5F5" BorderBrush="#FFEAF5F5" Height="AUTO"  />
        <TextBlock Grid.Column="1"   Grid.Row="4" Height="AUTO" x:Name="TbPassword" Visibility="Collapsed"/>
        <Border Grid.Column="1"  Grid.ColumnSpan="2"  Grid.Row="5" Background="#FF97FFFF" CornerRadius="20"  Margin="0,10,0,97" >
            <Button x:Name="btnEnter" Content="Enter" Margin="5" Background="#FF97FFFF" BorderBrush="#FF97FFFF" FontSize="16" Click="btnEnter_Click"/>
        </Border>
    </Grid>
</Window>
